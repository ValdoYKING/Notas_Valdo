<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotasInteligentesValdo" parent="android:Theme.Material.NoActionBar">
        <!-- Color por defecto para iconos/vector drawables que usan ?attr/colorControlNormal -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- Fondo/colores de system bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Íconos claros en barras (modo oscuro) -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="splashScreenIconSize">96dp</item>
    </style>

    <!-- Tema para la actividad del cropper en modo oscuro -->
    <style name="Theme_NotasInteligentesValdo_Cropper" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Toolbar oscura + contenido claro -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>

        <!-- Texto/íconos de la ActionBar -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

        <!-- Barra de estado visible: fondo oscuro + íconos claros -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Fondo de la Activity (lo que se ve alrededor de la imagen) -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.NotasInteligentesValdo.Splash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="splashScreenIconSize">96dp</item>
    </style>

</resources>
