<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotasInteligentesValdo" parent="android:Theme.Material.NoActionBar">
        <!-- Color por defecto para iconos/vector drawables que usan ?attr/colorControlNormal -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- Fondo/colores de system bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Íconos claros en barras (modo oscuro) -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="splashScreenIconSize">96dp</item>
    </style>

    <!-- Tema para la actividad del cropper en modo oscuro -->
    <style name="Theme_NotasInteligentesValdo_Cropper" parent="Theme.AppCompat.DayNight">
        <!-- Los colores se configurarán dinámicamente desde el código -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Íconos claros en modo oscuro -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Colores base para modo oscuro (se sobreescriben desde código) -->
        <item name="colorPrimary">#1C1C1E</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="Theme.NotasInteligentesValdo.Splash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="splashScreenIconSize">96dp</item>
    </style>

</resources>
