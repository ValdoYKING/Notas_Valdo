<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotasInteligentesValdo" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Color por defecto para iconos/vector drawables que usan ?attr/colorControlNormal -->
        <item name="colorControlNormal">@color/black</item>

        <!-- Fondo/colores de system bars (arranque) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Íconos oscuros en barras (modo claro) -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Fallback: algunos componentes (p.ej. splashscreen) leen este attr como dimensión -->
        <item name="splashScreenIconSize">96dp</item>
    </style>

    <!--
      Tema para la actividad del cropper.
      IMPORTANTE: el cropper usa una Activity AppCompat con toolbar/menú propios.
      Si usamos NoActionBar, en algunos dispositivos termina viéndose “solo la imagen” (sin controles).
      Por eso aquí usamos un tema DayNight CON ActionBar/Toolbar.
    -->
    <style name="Theme_NotasInteligentesValdo_Cropper" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Toolbar clara + contenido oscuro -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>

        <!-- Texto/íconos de la ActionBar -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <!-- Barra de estado visible: fondo claro + íconos oscuros -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Fondo de la Activity (lo que se ve alrededor de la imagen) -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <!-- Compat: Tema de Splash para API < 31 (solo color de fondo) -->
    <style name="Theme.NotasInteligentesValdo.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Mantener consistencia en el primer frame (íconos oscuros) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Fallback: requerido por el layout interno de androidx.core:splashscreen -->
        <item name="splashScreenIconSize">96dp</item>
    </style>
</resources>