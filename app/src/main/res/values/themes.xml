<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotasInteligentesValdo" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Color por defecto para iconos/vector drawables que usan ?attr/colorControlNormal -->
        <item name="colorControlNormal">@color/black</item>

        <!-- Fondo/colores de system bars (arranque)
             Nota: no usar transparente aquí; en edge-to-edge puede verse negro/invisible.
        -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>

        <!-- Íconos oscuros en barras (modo claro) -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Fallback: algunos componentes (p.ej. splashscreen) leen este attr como dimensión -->
        <item name="splashScreenIconSize">96dp</item>
    </style>

    <!--
      Tema para la actividad del cropper.
      - Usa DayNight para adaptarse automáticamente al tema del sistema/app.
      - Los colores se pasan dinámicamente desde CropImageOptions.
    -->
    <style name="Theme_NotasInteligentesValdo_Cropper" parent="Theme.AppCompat.DayNight">
        <!-- Los colores se configurarán dinámicamente desde el código -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Iconos oscuros en barras para modo claro -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Colores base para modo claro (se sobreescriben desde código) -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="colorControlNormal">#000000</item>
    </style>


    <!-- Compat: Tema de Splash para API < 31 (solo color de fondo) -->
    <style name="Theme.NotasInteligentesValdo.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Mantener consistencia en el primer frame (íconos oscuros) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Fallback: requerido por el layout interno de androidx.core:splashscreen -->
        <item name="splashScreenIconSize">96dp</item>
    </style>
</resources>